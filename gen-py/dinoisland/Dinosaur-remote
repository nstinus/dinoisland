import sys
import pprint
from urlparse import urlparse
from thrift.transport import TTransport
from thrift.transport import TSocket
from thrift.transport import THttpClient
from thrift.protocol import TBinaryProtocol

import Dinosaur
from ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print ''
  print 'Usage: ' + sys.argv[0] + ' [-h host:port] [-u url] [-f[ramed]] function [arg1 [arg2...]]'
  print ''
  print 'Functions:'
  print '  RegisterClientResults registerClient(string email, string highScoreName, EntityType type)'
  print '  DinosaurState hatch(i64 eggID)'
  print '  EggResults egg(Direction direction, i32 calories_given)'
  print '  LookResults look(Direction direction)'
  print '  GrowResults grow()'
  print '  MoveResults move(Direction direction)'
  print ''
  sys.exit(0)

pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':')
  host = parts[0]
  port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':')
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  if url[4]:
    uri += '?%s' % url[4]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = Dinosaur.Client(protocol)
transport.open()

if cmd == 'registerClient':
  if len(args) != 3:
    print 'registerClient requires 3 args'
    sys.exit(1)
  pp.pprint(client.registerClient(args[0],args[1],eval(args[2]),))

elif cmd == 'hatch':
  if len(args) != 1:
    print 'hatch requires 1 args'
    sys.exit(1)
  pp.pprint(client.hatch(eval(args[0]),))

elif cmd == 'egg':
  if len(args) != 2:
    print 'egg requires 2 args'
    sys.exit(1)
  pp.pprint(client.egg(eval(args[0]),eval(args[1]),))

elif cmd == 'look':
  if len(args) != 1:
    print 'look requires 1 args'
    sys.exit(1)
  pp.pprint(client.look(eval(args[0]),))

elif cmd == 'grow':
  if len(args) != 0:
    print 'grow requires 0 args'
    sys.exit(1)
  pp.pprint(client.grow())

elif cmd == 'move':
  if len(args) != 1:
    print 'move requires 1 args'
    sys.exit(1)
  pp.pprint(client.move(eval(args[0]),))

else:
  print 'Unrecognized method %s' % cmd
  sys.exit(1)

transport.close()
